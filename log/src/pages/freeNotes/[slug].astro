---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const notes = await getCollection('freeNotes');
  return notes.map(note => ({
    params: { slug: note.slug },
    props: { note },
  }));
}

const { note } = Astro.props;
const { Content } = await note.render();

// --- Series Logic ---
const getSeriesName = (n) => {
    if (!n.data.series) return null;
    return typeof n.data.series === 'string' ? n.data.series : n.data.series.name;
};

const getSeriesOrder = (n) => {
    if (!n.data.series || typeof n.data.series === 'string') return Infinity;
    return n.data.series.order ?? Infinity;
};

const currentSeriesName = getSeriesName(note);
const currentOrder = getSeriesOrder(note);

let nextNote = null;
let firstNote = null;
let showSeriesCallout = false;

if (currentSeriesName) {
    const allNotes = await getCollection('freeNotes');
    const seriesSiblings = allNotes
        .filter(n => getSeriesName(n) === currentSeriesName)
        .sort((a, b) => {
             const orderA = getSeriesOrder(a);
             const orderB = getSeriesOrder(b);
             if (orderA !== orderB) return orderA - orderB;
             return new Date(a.data.date) - new Date(b.data.date); // Oldest first for series reading order equivalent
        });

    if (seriesSiblings.length > 0) {
        firstNote = seriesSiblings[0];
        
        // Show callout if this note is part of a series and NOT the first one
        // OR if the user is deep in a series
        if (firstNote.slug !== note.slug) {
             showSeriesCallout = true;
        }

        const currentIndex = seriesSiblings.findIndex(n => n.slug === note.slug);
        if (currentIndex !== -1 && currentIndex < seriesSiblings.length - 1) {
            nextNote = seriesSiblings[currentIndex + 1];
        }
    }
}
---

<Layout 
  title={note.data.title}
  description={note.data.description}
>
  <div class="max-w-3xl mx-auto p-6 md:p-12">
       <a href="/" class="text-zinc-500 hover:text-white mb-8 inline-flex items-center text-sm font-medium transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
        Back to Dashboard
      </a>
      
      <article class="prose prose-zinc prose-invert prose-lg max-w-none">
        <div class="mb-10 pb-6 border-b border-zinc-800">
            <h1 class="text-4xl font-extrabold tracking-tight text-white mb-4">{note.data.title}</h1>
            <div class="flex gap-4 text-sm items-center text-zinc-400">
                 {note.data.maturity && (
                  <span class={`px-2 py-0.5 rounded-full text-xs font-semibold uppercase tracking-wide
                        ${note.data.maturity === 'evergreen' ? 'bg-emerald-900/30 text-emerald-400 border border-emerald-900/50' : 
                          note.data.maturity === 'budding' ? 'bg-amber-900/30 text-amber-400 border border-amber-900/50' : 
                          'bg-zinc-800 text-zinc-400 border border-zinc-700'}`
                  }>
                    {note.data.maturity}
                  </span>
                )}
                 <span>â€¢</span>
                 <span>{note.data.date.toLocaleDateString()}</span>
            </div>
        </div>
        
        {showSeriesCallout && (
            <div class="bg-zinc-900/50 border border-blue-900/30 rounded-xl p-4 mb-8 flex items-start gap-3 text-sm text-zinc-300">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-400 shrink-0 mt-0.5"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="16" x2="12" y2="12"></line><line x1="12" y1="8" x2="12.01" y2="8"></line></svg>
                <div>
                   <p>
                      This is <span class="font-medium text-white">{Number.isFinite(currentOrder)? `part ${currentOrder}` : 'part'}</span> of the <span class="font-medium text-blue-400">{currentSeriesName}</span> series.
                   </p>
                   {firstNote && firstNote.slug !== note.slug && (
                       <p class="mt-1 text-zinc-400">
                          For the full context, I recommend starting with <a href={`/freeNotes/${firstNote.slug}`} class="text-blue-400 hover:text-blue-300 hover:underline transition-colors">{firstNote.data.title}</a>.
                       </p>
                   )}
                </div>
            </div>
        )}
        
        <Content />

        {/* Next in Series Card */}
        {nextNote && (
            <div class="mt-16 pt-8 border-t border-zinc-800">
                <p class="text-sm text-zinc-500 font-medium mb-4 uppercase tracking-wider">Up Next in {currentSeriesName}</p>
                <a href={`/freeNotes/${nextNote.slug}`} class="group block">
                    <div class="bg-zinc-900 border border-zinc-800 rounded-2xl p-6 md:p-8 hover:bg-zinc-800 hover:border-zinc-700 transition-all duration-300 shadow-sm hover:shadow-xl hover:shadow-zinc-900/20">
                        <div class="flex items-start justify-between gap-4">
                            <div>
                                <h3 class="text-xl md:text-2xl font-bold text-white mb-2 group-hover:text-blue-400 transition-colors">
                                    {nextNote.data.title}
                                </h3>
                                <div class="flex items-center gap-2 text-sm text-zinc-500">
                                    <span>Read next</span>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
                                </div>
                            </div>
                         </div>
                    </div>
                </a>
            </div>
        )}

        {note.data.tags && note.data.tags.length > 0 && (
          <div class="mt-12 pt-6 border-t border-zinc-800">
            <div class="flex gap-2 flex-wrap">
              {note.data.tags.map(tag => (
                <span class="bg-zinc-900 text-zinc-300 px-3 py-1 rounded-full text-sm border border-zinc-800">
                  #{tag}
                </span>
              ))}
            </div>
          </div>
        )}
      </article>
  </div>
</Layout>
